<div class="wrapper">
  <h1>Welcome to Design Girls!</h1>


  <!-- チュートリアル一覧 -->
  <div class ="tutorials">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category_image_for category %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category_path(id: category) %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいカテゴリーを作る', new_category_path %>

</div>

</div>
