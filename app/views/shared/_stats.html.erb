<% @user ||= current_user %>
<div class="stats">
  <a href="<%= favorite_user_path(@user) %>">
    <strong id="favorites" class="stat">
      <%= @user.favorite_products.count %>
    </strong>
    favorites
  </a>
  <a href="<%= like_user_path(@user) %>">
    <strong id="likes" class="stat">
      <%= @user.like_tutorials.count %>
    </strong>
    favorites
  </a>
</div>