          <%= f.number_field :user_id %>
        </div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_field :description %>
        </div>
        <div class="field">
          <%= f.label :image %><br>
          <%= f.file_field :image %>
        </div>
