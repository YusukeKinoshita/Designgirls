<div class="create-wrapper">
  <div class="form"> 
    　<!--　エラーメッセージ -->
      <% if @tutorial.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@tutorial.errors.count, "error") %> prohibited this tutorial from being saved:
          </h2>

          <ul>
            <% @tutorial.errors.full_messages.each do |msg| %>
