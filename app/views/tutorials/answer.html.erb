    <div class="question-form">
        <div class="question-white">
        <fieldset class="fieldset">
            <div class="exercise-title">
                <h2>Exercise</h2>
                <p>復習問題を解きましょう</p>
            </div>

            <div class="questions">
                <% @tutorial.questions.each_with_index do |question, index| %>
                <% if @correct_answers[index]==1 %>
                    <p class="true">正解</p>
                <% else %>
                    <p class="false">不正解</p>
                <% end %>

                  <div class="question"> 
                    <div class="question-title">
                        <h3>Question<%= q_index + 1 %></h3>
                        <p><%= question.question %></p>
                    </div>
                    <div class="clear"></div>
                    <ul>
                        <% question.selects.each_with_index do |select, index| %>
                        <li>
                            <label><%= f.radio_button "content#{q_index}", index+1 %><%= select.content %></label>
                        </li>
                        <% end %>
                    </ul>
                  </div>
                <% end %>           
            </div>

           <!--  <div class="clear"></div> -->

        </fieldset>
        </div>
    </div>
<!-- </div> -->
<% end %>


